}

@article{cubidesAnthropogenicDisturbanceEdge2011,
	title = {Anthropogenic {Disturbance} and {Edge} {Effects} on {Anuran} {Assemblages} {Inhabiting} {Cloud} {Forest} {Fragments} in {Colombia}},
