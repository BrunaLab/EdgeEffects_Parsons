	file = {Gehlhausen et al. - 2000 - Vegetation and Microclimatic Edge Effects in Two M.pdf:/Users/emiliobruna/Zotero/storage/N3F4V5DF/Gehlhausen et al. - 2000 - Vegetation and Microclimatic Edge Effects in Two M.pdf:application/pdf},
