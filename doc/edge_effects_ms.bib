@article{cappelattiSPATIALDISTRIBUTIONPOPULATION2015,
	title = {{SPATIAL} {DISTRIBUTION} {AND} {POPULATION} {STRUCTURE} {OF} {PALMS} ({ARECACEAE}) {IN} {A} {FOREST} {FRAGMENT} {OF} {LOWLAND} {DENSE} {HUMID} {FOREST} {IN} {SOUTH} {BRAZIL}},
