	journal = {Agricultural and Forest Meteorology},
	author = {Pohlman, Catherine L. and Turton, Stephen M. and Goosem, Miriam},
	month = jan,
	year = {2009},
	pages = {84--95},
	file = {Pohlman et al. - 2009 - Temporal variation in microclimatic edge effects n.pdf:/Users/emiliobruna/Zotero/storage/DYTLYLTV/Pohlman et al. - 2009 - Temporal variation in microclimatic edge effects n.pdf:application/pdf},
}

@article{renhornGrowthVitalityEpiphytic1997,
