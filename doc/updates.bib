	title = {Sustaining rainforest remnants in plantation landscapes: degree of oil palm stand-induced edge effects on forest microclimate and regeneration},
	volume = {28},
	copyright = {http://creativecommons.org/licenses/by/4.0/},
	issn = {2317-6342, 0104-7760},
	shorttitle = {Sustaining rainforest remnants in plantation landscapes},
