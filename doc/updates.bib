	journal = {Biotropica},
	author = {Anderson, Jake A. and McClean, Colin J. and Sim, Sarah and Pettorelli, Nathalie and Jelling, Ahmad and Tangah, Joseph and Hill, Jane K.},
	year = {2022},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/btp.13115},
	keywords = {agricultural expansion, biodiversity, carbon storage, forest fragmentation, forest structure, microclimate, tropical trees},
