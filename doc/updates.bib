	pages = {228--239},
	file = {PDF:/Users/emiliobruna/Zotero/storage/SA7CM69I/Slater et al. - 2024 - Living on the edge forest edge effects on microclimate and terrestrial mammal activity in disturbed.pdf:application/pdf},
