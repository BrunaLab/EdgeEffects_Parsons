@article{schreierMathematicalModellingApproach2022,
	title = {A {Mathematical} {Modelling} {Approach} to {Functionally} {Defining} {Forest} {Edge} and {Its} {Utility} for {Primate} {Behavioural} {Edge} {Effects}},
	volume = {43},
