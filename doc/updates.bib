@article{nunesEdgeEffectsTree2023,
	title = {Edge effects on tree architecture exacerbate biomass loss of fragmented {Amazonian} forests},
	volume = {14},
	copyright = {2023 This is a U.S. Government work and not under copyright protection in the US; foreign copyright protection may apply},
