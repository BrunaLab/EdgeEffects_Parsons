	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/een.13040},
	keywords = {edge effects, geographical orientation, habitat fragmentation, leafminer herbivory, microclimatic conditions, parasitism},
	pages = {1047--1058},
	file = {Full Text PDF:/Users/emiliobruna/Zotero/storage/XLBD6LUG/Bernaschini et al. - 2021 - Microclimatic edge effects in a fragmented forest disentangling the drivers of ecological processes.pdf:application/pdf;Snapshot:/Users/emiliobruna/Zotero/storage/2LAXHAJA/een.html:text/html},
