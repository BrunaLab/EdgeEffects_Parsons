	issn = {2041-1723},
	url = {https://www.nature.com/articles/s41467-021-27373-7},
	doi = {10.1038/s41467-021-27373-7},
	abstract = {Fragmentation transforms the environment along forest edges. The prevailing narrative, driven by research in tropical systems, suggests that edge environments increase tree mortality and structural degradation resulting in net decreases in ecosystem productivity. We show that, in contrast to tropical systems, temperate forest edges exhibit increased forest growth and biomass with no change in total mortality relative to the forest interior. We analyze {\textgreater}48,000 forest inventory plots across the north-eastern US using a quasi-experimental matching design. At forest edges adjacent to anthropogenic land covers, we report increases of 36.3\% and 24.1\% in forest growth and biomass, respectively. Inclusion of edge impacts increases estimates of forest productivity by up to 23\% in agriculture-dominated areas, 15\% in the metropolitan coast, and +2\% in the least-fragmented regions. We also quantify forest fragmentation globally, at 30-m resolution, showing that temperate forests contain 52\% more edge forest area than tropical forests. Our analyses upend the conventional wisdom of forest edges as less productive than intact forest and call for a reassessment of the conservation value of forest fragments.},
	language = {en},
	number = {1},
	urldate = {2025-05-30},
	journal = {Nature Communications},
	author = {Morreale, Luca L. and Thompson, Jonathan R. and Tang, Xiaojing and Reinmann, Andrew B. and Hutyra, Lucy R.},
	month = dec,
	year = {2021},
	note = {Publisher: Nature Publishing Group},
	keywords = {Ecosystem ecology, Forest ecology, Forestry},
	pages = {7181},
	file = {Full Text PDF:/Users/emiliobruna/Zotero/storage/5WLM9CJ8/Morreale et al. - 2021 - Elevated growth and biomass along temperate forest edges.pdf:application/pdf},
}

@article{depauwForestUnderstoreyCommunities2022,
	title = {Forest understorey communities respond strongly to light in interaction with forest structure, but not to microclimate warming},
